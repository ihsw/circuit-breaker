{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "removeComments": true,
        "declaration": false,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}
